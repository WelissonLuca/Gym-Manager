{% extends 'layout.njk' %}

{% block headstyle %}
    <link rel="stylesheet" href="/css/instructors.css">
{% endblock headstyle %}

{% block content %}
    <div class="card table-container">


        <div class="header">
             <a class="button" href="/instructors/create">Novo</a>
             <form action="/instructors" method="GET">
                <input 
                type="text"
                name="filter"
                placeholder="Nome ou Atendimento"
                value={{filter}}

                >
                <button type="submit">Filtrar</button>
             </form>
        </div>
       
        <table width="100%">
            <thead>
                <tr>
                    <th>Instructor</th>
                    <th>Atendimento</th>
                    <th>Alunos</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for instructor in instructors%}
                    <tr>
                       
                           <td>
                              <span style="background:url({{instructor.avatar_url}}) center center / cover">  </span>
                               {{instructor.name}}</td>
                           
                        <td>{{instructor.services}}</td>
                        <td>{{instructor.total_students}}</td>
                        <td>
                            <a href="/instructors/{{instructor.id}}">ver</a>
                        </td>

                    </tr>

                {% endfor %}

            </tbody>

        </table>
    </div>

{% endblock content %}